    private void firstNumberActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
    }

    private void minusActionPerformed(java.awt.event.ActionEvent evt) {
        long numbe1, number2;
        try {
            numbe1 = Long.parseLong(this.firstNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD FIRST NUMBER", "ERROR",
                    JOptionPane.ERROR);
            return;
        }
        try {
            number2 = Long.parseLong(this.secindNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD SECOND NUMBER", "ERROR",
                    JOptionPane.ERROR_MESSAGE);
            return;
        }
        long answer = numbe1 - number2;
        this.answer.setText("This is answer" + answer);
    }

    private void additionButtonActionPerformed(java.awt.event.ActionEvent evt) {
        long number1, number2;
        try {
            number1 = Long.parseLong(this.firstNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD FIRST NUMBER", "EROOR", JOptionPane.ERROR_MESSAGE);
            return;
        }
        try {
            number2 = Long.parseLong(this.secindNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD SECOND NUMBER", "EROOR", JOptionPane.ERROR_MESSAGE);
            return;
        }
        long answer = number1 + number2;
        this.answer.setText("This is answer" + answer);
    }

    private void divideButoonActionPerformed(java.awt.event.ActionEvent evt) {
        long number1, number2;
        try {
            number1 = Long.parseLong(this.firstNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD FIRST NUMBER", "EROOR", JOptionPane.ERROR_MESSAGE);
            return;
        }
        try {
            number2 = Long.parseLong(this.secindNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD SECOND NUMBER", "EROOR", JOptionPane.ERROR_MESSAGE);
            return;
        }
        long answer = number1 / number2;
        this.answer.setText("This is answer" + answer);
    }

    private void multiplyActionPerformed(java.awt.event.ActionEvent evt) {
        int numbe1, number2;
        try {
            numbe1 = Integer.parseInt(this.firstNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD FIRST NUMBER", "ERROR",
                    JOptionPane.ERROR);
            return;
        }
        try {
            number2 = Integer.parseInt(this.secindNumber.getText());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "BAD SECOND NUMBER", "ERROR",
                    JOptionPane.ERROR_MESSAGE);
            return;
        }
        int answer = numbe1 * number2;
        this.answer.setText("This is answer" + answer);// TODO add your handling code here:
    }

